							.swiper-slide(style="background-image:url(http://lorempixel.com/1200/1200/nature/6)")
							.swiper-slide(style="background-image:url(http://lorempixel.com/1200/1200/nature/7)")

					.swiper-button-next.swiper-button-white
					.swiper-button-prev.swiper-button-white

					.swiper-container.gallery-thumbs
						.swiper-wrapper
							.swiper-slide(style="background-image:url(http://lorempixel.com/1200/1200/nature/1)")
							.swiper-slide(style="background-image:url(http://lorempixel.com/1200/1200/nature/2)")
							.swiper-slide(style="background-image:url(http://lorempixel.com/1200/1200/nature/3)")
							.swiper-slide(style="background-image:url(http://lorempixel.com/1200/1200/nature/4)")
