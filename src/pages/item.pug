extends ./../templates/common

block appScripts
	script(src='/js/item.min.js')

block content
	.item_page
		.content-wrapper

			ul.item_page-breadcrump
				li
					a(href="") Магазин
					+icon('arrow-right','')
				li
					a(href="") Кабели
					+icon('arrow-right','')
				li Магнитный кабель

			.row
				.col-sm-6.col-xs-12.sw
					.item_page-slider
						.swiper-wrapper
							.swiper-slide
								img(src="/assets/img/page-item/1.png")
							.swiper-slide
								img(src="/assets/img/page-item/2.png")
							.swiper-slide
								img(src="/assets/img/page-item/3.png")
							.swiper-slide
								img(src="/assets/img/page-item/4.png")
							.swiper-slide
								img(src="/assets/img/page-item/5.png")
							.swiper-slide
								img(src="/assets/img/page-item/6.png")
					.item_page-thumbs
						.item_page-thumbs-img
							img(src="/assets/img/page-item/thumbs/1.png")
						.item_page-thumbs-img
							img(src="/assets/img/page-item/thumbs/2.png")
						.item_page-thumbs-img
							img(src="/assets/img/page-item/thumbs/3.png")
						.item_page-thumbs-img
							img(src="/assets/img/page-item/thumbs/4.png")
						.item_page-thumbs-img
							img(src="/assets/img/page-item/thumbs/5.png")
						.item_page-thumbs-img
							img(src="/assets/img/page-item/thumbs/6.png")


				.col-sm-6.col-xs-12
					.item_page-item
						h1 Магнитный кабель

						.item_page-item-price 1990
							=" "
							span Р
						//-
							p.select-length
								input#discount(name="discount" type="radio")
								label(for="discount") Активируй 10% скидку

						p.item_page-item-text Сверхпрочный кабель с магнитный коннектором невероятно долговечен и удобен в использовании. Оплётка из нейлона устойчива к стиранию и разрыву. Разьём удерживает на месте магнитами, поэтому, если кто-то случайно заденет шнур, он просто и безопастно для смартфона отсоеденится.

						a(href="#").link-more-info Подробнее о товаре
							span

						.item_page-item-length
							span Длина кабеля
							.length-selectors
								p.item-option
									input#length1(name="length" type="radio")
									label(for="length1") 100 м
								p.item-option
									input#length2(name="length" type="radio")
									label(for="length2") 150 м

						.item_page-item-color
							span Цвет - серый
							form.pick-color
								p
									input#color1(name="group1" type="radio" checked="true")
									label(for="color1")
										span(style="background: #e7e7ea;")
								p
									input#color2(name="group1" type="radio")
									label(for="color2")
										span(style="background: #e8cbae;")
								p
									input#color3(name="group1" type="radio")
									label(for="color3")
										span(style="background: #4b4d4e;")

						.item_page-item-connectors
							span Коннекторы
							.connector-selectors
								p.item-option
									input#connector1(name="connectors" type="radio")
									label(for="connector1") Lightning + MicroUSB
								p.item-option
									input#connector2(name="connectors" type="radio")
									label(for="connector2") Type + MicroUSB

						.item_page-item-basket
							.green-button.big-button
								span В корзину
							.item_page-item-star
								+icon('star','')

						a.catalog-link
							+icon('menu','')
							span Посмотреть все кабели


		.item_page-order-info
			.content-wrapper.row
				.col-sm-6.col-xs-12
					.item_page-order-info-content
						+icon('package','')
						.item_page-order-info-text
							p Заказ до 15:00, доставка: пн 21 августа – бесплатно
							a Варианты доставки для местоположения: Москва
				.col-sm-6.col-xs-12
					.item_page-order-info-content
						+icon('speech-bubble','')
						.item_page-order-info-text
							p Помощь при покупке. Пообщяйтесь со специалистами в чате или позвоните по телефону 
								strong 8 800 333-51-73

		.item_page-discount
			.content-wrapper
				.item_page-discount-title
					h3 Покупайте
					h3 выгодно
				.item_page-discount-offer
					img(src="/assets/img/page-item/offer1.png")
					.item_page-discount-offer-title 2 кабеля и 4 коннектора
						.item_page-discount-offer-price
							span.old-price 2 780
							="1990 "
							span Р
				.item_page-discount-offer
					img(src="/assets/img/page-item/offer2.png")
					.item_page-discount-offer-title 3 кабеля и 6 коннекторов
						.item_page-discount-offer-price
							span.old-price 2 780
							="1990 "
							span Р


		.content-wrapper
			.index_page-catalog
				.index_page-catalog-wrapper.content-wrapper
					.index_page-catalog-content.row
						.grid-sizer.col-sm-3.col-xs-6
						.index_page-catalog-item.col-sm-6.col-xs-12
							a.catalog-item-content.black.top-left(hre="#")
								.catalog-item-header
							img(src="/assets/img/page-item/photos/1.png")
						.index_page-catalog-item.col-sm-6.col-xs-12
							a.catalog-item-content.white.top-right(hre="#")
								.catalog-item-header
							img(src="/assets/img/page-item/photos/2.png")
						.index_page-catalog-item.col-sm-3.col-xs-6
							a.catalog-item-content.white.bottom-left(hre="#")
								.catalog-item-header
							img(src="/assets/img/page-item/photos/3.png")
						.index_page-catalog-item.col-sm-3.col-xs-6
							a.catalog-item-content.white.top-left(hre="#")
								.catalog-item-header
							img(src="/assets/img/page-item/photos/4.png")


		+icon('cancel','')


		.content-wrapper
			.item_page-content.gray-background.row
